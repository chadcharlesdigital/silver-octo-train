<div class="card-panel shadow rounded-2 mb-2 p-5" id="<%= dom_id job %>">
  <p>
    <strong>Name:</strong>
    <h4><%= job.name %></h4>
  </p>
  <p>
    <strong>Description:</strong>
    <%= job.description %>
  </p>
  <p>
    <strong>Price:</strong>
    <%= number_to_currency(job.price) %>
  </p>
  <p>
    <strong>Datetime:</strong>
    <%= job.datetime %>
  </p>
</div>
